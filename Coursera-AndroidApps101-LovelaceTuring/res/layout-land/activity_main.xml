<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/alan_heading"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal">
    
    <RelativeLayout
        android:id="@+id/relativeView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
    
    <LinearLayout
        android:id="@+id/linearView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
    <ImageView
        android:id="@+id/imageView1"
        android:layout_weight=".40"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="@string/alan1_desc"
        android:src="@drawable/alan1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_weight=".60"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/alan_text1"
        android:layout_marginLeft="8dp"
        android:textSize="22sp"/>

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/linearView1">
        
    
    <ImageView
        android:id="@+id/imageView2"
        android:contentDescription="@string/alan2_desc"
        android:layout_weight=".40"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/alan2" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_weight=".60"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/alan_text2"
        android:textSize="22sp" />
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/linearView2">
    
    <ImageView
        android:id="@+id/imageView3"
        android:layout_weight=".40"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/alan3_desc"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/alan3" />
    
    <TextView
        android:id="@+id/textView4"
        android:layout_weight=".60"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/ada_text3"
        android:textSize="22sp"/>
    
    </LinearLayout>
    
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/source"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:textSize="12sp"/>

    
    
	</RelativeLayout>
	
    </ScrollView>
    
</RelativeLayout>